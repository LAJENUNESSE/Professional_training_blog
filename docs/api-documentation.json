{
  "api": {
    "name": "Blog System API",
    "version": "1.0.0",
    "description": "Spring Boot Blog System REST API with JWT Authentication",
    "baseURL": "http://localhost:8080",
    "responseFormat": {
      "success": {
        "code": 200,
        "message": "success",
        "data": "<response_data>"
      },
      "error": {
        "code": "HTTP_STATUS_CODE",
        "message": "error_description",
        "data": null
      }
    },
    "pagination": {
      "format": "PageResult<T>",
      "fields": {
        "content": "array<T>",
        "pageNumber": "current page number (0-indexed)",
        "pageSize": "items per page",
        "totalElements": "total item count",
        "totalPages": "total page count",
        "first": "is first page",
        "last": "is last page"
      }
    }
  },
  "authentication": {
    "method": "JWT Bearer Token",
    "tokenType": "Bearer",
    "defaultCredentials": {
      "admin": {
        "username": "admin",
        "password": "admin123"
      }
    },
    "tokenExpiration": {
      "accessToken": "1 hour",
      "refreshToken": "7 days"
    }
  },
  "security": {
    "public": [
      "/api/auth/**",
      "GET /api/articles/**",
      "GET /api/categories/**",
      "GET /api/tags/**",
      "GET/POST /api/comments/**",
      "GET /api/settings/**",
      "/uploads/**"
    ],
    "authenticated": [
      "POST /api/articles/{id}/like"
    ],
    "adminOnly": [
      "/api/admin/**"
    ]
  },
